export GROFF_TMAC_PATH=$HOME/.tmac

export PARINIT='rTbgqR B=.,?_A_a Q=_s>|'

export FFF_CD_FILE=$HOME/.fff_d
export FFF_ERROR_ON_SIGINT=1
export FFF_SET_TITLE=1
